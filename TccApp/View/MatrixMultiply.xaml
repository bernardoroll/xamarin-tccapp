<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TccApp.MatrixMultiply">
<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness"
	                iOS="6, 20, 6, 6"
	                Android="6, 6, 6, 6"
	                WinPhone="6, 6, 6, 6" />
  	</ContentPage.Padding>
	<ContentPage.Content>

		<StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">

			<Label Text="Digite o tamanho da matriz quadrada:" />
			<Entry x:Name="entMatrixSize" />
			<Button x:Name="btnCalculate" Text="Calcular" />

			<Label x:Name="lblAverageTime" />
			<Label x:Name="lblShortestTime" />
			<Label x:Name="lblLargestTime" />
			<Label x:Name="lblTotalTime" />


		</StackLayout>

	</ContentPage.Content>
</ContentPage>
